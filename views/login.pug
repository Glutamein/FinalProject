html
    head
        title=mainTitle
        link(rel="stylesheet",  href="/css/styles.css")
    body(class="bg")
        h1= Whalecome
        nav
            each navOption in navOptions
                a(href=navOption.path)=navOption.name
           
        div(class='para')
             p(class='l')= 'Do you want to login or create an account?'
        div(class="signIn")
            p(class='p')= 'Log In'
            form(action="login", name='inlog')
                div(class=["input"])
                    label(for="username") Username: 
                    input#id(type="text", placeholder="Put your username here", name="name", size="30")
                    span(class="errorText")
                div(class=["input"])
                    label(for="password") Passsword: 
                    input#id(type="text", name="password", placeholder="Password goes here") 
                    span(class="errorText")
                div(class=["input"])
                a(type="button", action='login',class='notButton')=Login
        hr        
        div(class="createAcc")  
            p(class="p")='Create An Account'     
            form(action="createAccount", name='create')
                div(class=["input"])
                    label(for="username") Username: 
                    input#id(type="text", placeholder="Put your username here", name="name")
                    span(class="errorText")
                div(class=["input"])
                    label(for="email") Email: 
                    input#id(type="text", placeholder="E@mail.com", name="email")
                    span(class="errorText")
                div(class=["input"])
                    label(for="age") Age: 
                    input#id(type="month", placeholder="leave you 12.9 year old", name="age")
                    span(class="errorText")
                div(class=["input"])
                    label(for="password") Avatar image: 
                    input#id(type="url", name="image", placeholder="Place an image url here") 
                    span(class="errorText")
                div(class=["input"])
                    label(for="password") Role: 
                    input#id(type="text", placeholder="Put your role here", name="role")
                    span(class="errorText")
                div(class=["input"])
                    label(for="password") Passsword: 
                    input#id(type="text", name="password", placeholder="Password goes here") 
                    span(class="errorText")
                div(class=["input"])
                    label(for="re-pass") Re-enter your password: 
                    input#id(type="text", name="rePassword", placeholder="Re-enter passowrd") 
                    span(class="errorText")
                div(class=["input"])
                a(type='button', action="createAccount", class='notButton')=CreateAccount
        script(src="/js/scripts.js")
    footer
        h6= 'Copyright @ Puggos&trade'
        