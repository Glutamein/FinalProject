html
    head
        title=mainTitle
        link(rel="stylesheet",  href="/css/styles.css")
        script(src="/js/scripts.js")
    body
        h1= Whalecome
        div(class="background")
        p= 'Do you want to login or create an account?'
        div(class="signIn")
            form(action="login", name='inlog')
                div(class=["input"])
                    label(for="username") Username: 
                    input#id(type="text", placeholder="Put your username here", name="name", size="30")
                    span(class="errorText")
                div(class=["input"])
                    label(for="password") Passsword: 
                    input#id(type="text", name="password", placeholder="Password goes here") 
                    span(class="errorText")
                div(class=["input"])
                button(action='login')= Login
                
        div(class="createAcc")       
            form(action="createAccount", name='create')
                div(class=["input"])
                    label(for="username") Username: 
                    input#id(type="text", placeholder="Put your username here", name="name")
                    span(class="errorText")
                div(class=["input"])
                    label(for="email") Email: 
                    input#id(type="text", placeholder="E@mail.com", name="email")
                    span(class="errorText")
                div(class=["input"])
                    label(for="age") Age: 
                    input#id(type="month", placeholder="leave you 12.9 year old", name="age")
                    span(class="errorText")
                div(class=["input"])
                    label(for="password") Avatar image: 
                    input#id(type="url", name="image", placeholder="Place an image url here") 
                    span(class="errorText")
                div(class=["input"])
                    label(for="password") Roll: 
                    input#id(name="roll", type='text', placeholder='Enter a roll')
                    span(class="errorText")
                div(class=["input"])
                    label(for="password") Passsword: 
                    input#id(type="text", name="password", placeholder="Password goes here") 
                    span(class="errorText")
                div(class=["input"])
                    label(for="re-pass") Re-enter your password: 
                    input#id(type="text", name="rePassword", placeholder="Re-enter passowrd") 
                    span(class="errorText")
                div(class=["input"])
                button(action="createAccount")= Create Account
