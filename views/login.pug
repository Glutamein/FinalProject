        hr        
        div(class="createAcc")  
            p(class="p")='Create An Account'     
            form(action="createAccount", name='create')
                div(class=["input"])
                    label(for="username") Username: 
                    input#id(type="text", placeholder="Put your username here", name="name")
                    span(class="errorText")
                div(class=["input"])
                    label(for="email") Email: 
                    input#id(type="text", placeholder="E@mail.com", name="email")
                    span(class="errorText")
                div(class=["input"])
                    label(for="age") Age: 
                    input#id(type="month", placeholder="leave you 12.9 year old", name="age")
                    span(class="errorText")
                div(class=["input"])
                    label(for="password") Avatar image: 
                    input#id(type="url", name="image", placeholder="Place an image url here") 
                    span(class="errorText")
                div(class=["input"])
                    label(for="password") This is an: 
                    input#id(type="text", placeholder="Put your role here", name="role")
                    span(class="errorText")
                div(class=["input"])
                    label(for="password") Passsword: 
                    input#id(type="text", name="password", placeholder="Password goes here") 
                    span(class="errorText")
                div(class=["input"])
                    label(for="re-pass") Re-enter your password: 
                    input#id(type="text", name="rePassword", placeholder="Re-enter passowrd") 
                    span(class="errorText")
                div(class=["input"])
                button(type='submit', action="createAccount")=CreateAccount
        script(src="/js/scripts.js")
